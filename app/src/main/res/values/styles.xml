<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="Widget.Button.NextPrev" parent="android:Widget">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:layout_height">@dimen/space_x5</item>
        <item name="android:layout_width">@dimen/space_x6</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bubble</item>
        <item name="android:layout_margin">@dimen/space</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.CardTitle.Text" parent="android:Widget">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

