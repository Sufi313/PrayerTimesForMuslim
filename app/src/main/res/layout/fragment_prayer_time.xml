<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_fifteen"
        android:paddingTop="@dimen/space_ten"
        android:paddingEnd="@dimen/space_fifteen"
        android:paddingBottom="@dimen/space_ten"
        tools:context=".fragments.PrayerTimeFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_ten"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_prayer"
                    android:textColor="@color/textColorSecondary"
                    android:paddingLeft="@dimen/space_ten"
                    android:paddingRight="0dp"
                    android:paddingStart="@dimen/space_ten"
                    android:paddingEnd="0dp"
                    android:paddingTop="@dimen/space_ten"
                    android:paddingBottom="@dimen/space_five"
                    android:textSize="@dimen/text_twentyfive"
                    android:textStyle="bold"
                    android:fontFamily="@font/pro_display_semibold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/textColorSecondary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:paddingStart="@dimen/space_ten"
                    android:paddingLeft="@dimen/space_ten"
                    android:paddingRight="@dimen/space_ten"
                    android:paddingEnd="@dimen/space_ten"
                    android:layout_marginBottom="@dimen/space_ten"
                    >

                    <TextView
                        android:layout_weight=".5"
                        android:id="@+id/remainigPrayNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Maghrib"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_twentyfive"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:layout_weight=".5"
                        android:id="@+id/remainigPrayTimeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:text="01:54:43"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_twentyfive"
                        android:fontFamily="@font/pro_display_regular"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_twenty"
            android:background="@color/transparent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_ten"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_times"
                    android:textColor="@color/textColorSecondary"
                    android:paddingLeft="@dimen/space_ten"
                    android:paddingRight="0dp"
                    android:paddingStart="@dimen/space_ten"
                    android:paddingEnd="0dp"
                    android:paddingTop="@dimen/space_ten"
                    android:paddingBottom="@dimen/space_five"
                    android:textSize="@dimen/text_twentyfive"
                    android:textStyle="bold"
                    android:fontFamily="@font/pro_display_semibold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/textColorSecondary"/>

                <LinearLayout
                    android:id="@+id/fajr_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:text="@string/fajr"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/fajr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        android:contentDescription="TODO" app:srcCompat="@drawable/ic_alarm_on" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/sunrise_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/sunrise"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/sunrise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        app:srcCompat="@drawable/ic_alarm_on"
                        android:contentDescription="@string/button_alarm_on"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/dhuhr_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:text="@string/dhuhr"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/dhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        app:srcCompat="@drawable/ic_alarm_on"
                        android:contentDescription="@string/button_alarm_on"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/asr_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:text="@string/asr"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/asr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        app:srcCompat="@drawable/ic_alarm_on"
                        android:contentDescription="@string/button_alarm_on"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/maghrib_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:text="@string/maghrib"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/maghrib"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        app:srcCompat="@drawable/ic_alarm_on"
                        android:contentDescription="@string/button_alarm_on"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/isha_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_five"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:text="@string/isha"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <TextView
                        android:id="@+id/isha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pro_display_regular"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.33"
                        app:srcCompat="@drawable/ic_alarm_on"
                        android:contentDescription="@string/button_alarm_on"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_twenty"
            android:background="@color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cityTV"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="20sp"
                android:fontFamily="@font/pro_display_medium"/>

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="20sp"
                android:fontFamily="@font/pro_display_medium"/>

            <TextView
                android:id="@+id/hicriDateTV"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="20sp"
                android:fontFamily="@font/pro_display_medium"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>